<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>db2_projectWEB</display-name>
  <welcome-file-list>
    <welcome-file>RegisterPage.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>ProductOfTheDay</servlet-name>
  	<servlet-class>it.polimi.db2.pages.ProductPage</servlet-class>
  </servlet>

<servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
</servlet-mapping>

<servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
</servlet-mapping>

<filter>  
	<filter-name>authentication</filter-name>  
	<filter-class>it.polimi.db2.filters.AuthenticationFilter</filter-class>  
</filter>  

<filter>  
	<filter-name>authorization</filter-name>  
	<filter-class>it.polimi.db2.filters.AuthorizationFilter</filter-class>  
</filter>  

<filter-mapping>  
	<filter-name>authentication</filter-name>  
	 <url-pattern>/product/*</url-pattern>
	 <url-pattern>/dashboard/*</url-pattern>
</filter-mapping>  

<filter-mapping>  
	<filter-name>authorization</filter-name>  
	 <url-pattern>/product/new</url-pattern>
	 <url-pattern>/product/delete</url-pattern>
	 <url-pattern>/dashboard/*</url-pattern>
</filter-mapping>  

</web-app>